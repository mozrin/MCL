echo "--- Default Trim (Ends) ---";
echo trim("  Hello World  ");
echo trim("\t\n\r  Test String\t\n\r");
echo trim("No Trim Needed");
echo trim("   ");
echo "--- Custom Character Trim (Ends) ---";
echo trim("xxHello Worldxx", "x");
echo trim("_-=Trim This!=-_", "-=_");
echo trim("AAAAABBBBAAAA", "A");
echo trim("ABCDEF", "AXF");
echo "--- MCL_TRIM_LEFT ---";
echo trim("  Left Trim  ", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_LEFT);
echo trim("___Left Trim___", "_", MCL_TRIM_LEFT);
echo trim("abcde", "a", MCL_TRIM_LEFT);
echo trim("ababc", "ab", MCL_TRIM_LEFT);
echo "--- MCL_TRIM_RIGHT ---";
echo trim("  Right Trim  ", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_RIGHT);
echo trim("___Right Trim___", "_", MCL_TRIM_RIGHT);
echo trim("edcba", "a", MCL_TRIM_RIGHT);
echo trim("cbaab", "ab", MCL_TRIM_RIGHT);
echo "--- MCL_TRIM_MIDDLE ---";
echo trim("Hello   World", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_MIDDLE);
echo trim("A B C D E", " ", MCL_TRIM_MIDDLE);
echo trim("XXHelloXXXXWorldXX", "X", MCL_TRIM_MIDDLE);
echo trim("Multiple   Spaces   In   Middle", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_MIDDLE);
echo "--- MCL_TRIM_ALL ---";
echo trim("   Full   Trim   Example   ", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_ALL);
echo trim("xxxABCxxxDEFxxxGHIxxx", "x", MCL_TRIM_ALL);
echo trim("A-B-C-D-E", "-", MCL_TRIM_ALL);
echo trim("   Mixed    trim    characters   ", " \t", MCL_TRIM_ALL);
echo "--- Combined Operations ---";
echo trim("  Left And   Middle  ", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_LEFT | MCL_TRIM_MIDDLE);
echo trim("  Right And   Middle  ", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_RIGHT | MCL_TRIM_MIDDLE);
echo "--- Edge Cases ---";
echo trim("", MCL_TRIM_CHARS_DEFAULT);
echo trim("abc", "");
echo trim("   ", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_ALL);
echo trim("hello", MCL_TRIM_CHARS_DEFAULT, MCL_TRIM_LEFT | MCL_TRIM_RIGHT);